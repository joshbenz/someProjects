<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csun.a380group5.fitnessapp.WorkoutGenerator.ExerciseDataActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:id="@+id/button_home" />

    <TextView
        android:text="Exercise Type: "
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name"
        android:layout_marginTop="50dp"
        android:id="@+id/textView_type" />

    <TextView
        android:text="Required Equipment: "
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_type"
        android:layout_alignStart="@+id/textView_type"
        android:layout_marginTop="50dp"
        android:id="@+id/textView_equip" />

    <TextView
        android:text="Exercise Level: "
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView_level"
        android:layout_below="@+id/textView_equip"
        android:layout_alignStart="@+id/textView_equip" />

    <TextView
        android:text="Exercise Name: "
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView_name"
        android:layout_below="@+id/toolbar3"
        android:layout_alignStart="@+id/button_home" />

    <Button
        android:text="View Source Webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/button_webview"
        android:layout_below="@+id/textView_level"
        android:layout_toEndOf="@+id/button_home" />

</RelativeLayout>